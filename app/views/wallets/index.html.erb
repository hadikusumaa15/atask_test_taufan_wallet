<!DOCTYPE html>
<html>

<head>
  <title>My Wallet</title>
</head>
<body>
  <div class="container">
    <h1>My Wallet</h1>
    <div class="row">
      <div class="col-md-12">
        <h2>Balance</h2>
        <p>Your current balance is <%= @wallet.balance %> </p>
      </div>
      <div class="col-md-12">
        <h2>Transaction History</h2>
        <div class="row">
          <div class="col-md-12">
            <table class="table">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Amount</th>
                  <th>Transaction Type</th>
                  <th>Description</th>
                </tr>
              </thead>
              <tbody>
              <% @transactions.each do |transaction| %>
                <tr>
                  <td><%= transaction.created_at %></td>
                  <td><%= transaction.amount %></td>
                  <td><%= transaction.transaction_type(@current_user) %></td>
                  <td><%= "My Description" %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
            <div class="pagination justify-content-center">
              <%= will_paginate @transactions, class: "pagination-sm" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>
