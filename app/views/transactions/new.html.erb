<div class="row">
  <div class="col-md-1"> </div>
  <div class="col-md-7">
    <%= render 'shared/flash' %>
    <h1>New Transaction</h1>
  </div>
</div>

<%= form_for @transaction, url: transactions_path do |f| %>
  <div class="row">
    <div class="col-md-1"> </div>
    <div class="col-md-11">

      <div class="form-group row">
        <%= f.label :source_wallet, class: "col-md-1 col-form-label" %>
        <div class="col-md-6">
          <%= f.collection_select :source_wallet, @my_wallets, :id, :wallet_owner, { include_blank: 'Select your wallet' }, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :target_wallet, class: "col-md-1 col-form-label" %>
        <div class="col-md-6">
          <%= f.collection_select :target_wallet, @target_wallets, :id, :wallet_owner, { include_blank: 'Select your recipient' }, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :amount, class: "col-md-1 col-form-label" %>
        <div class="col-md-6">
          <%= f.number_field :amount, class: "form-control", placeholder: "0" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :description, class: "col-md-1 col-form-label" %>
        <div class="col-md-6">
          <%= f.text_field :description, class: "form-control", placeholder: "ex: cash deposit, wallet transfer, etc" %>
        </div>
      </div>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
